<resources>

    <style name="LightTheme" parent="Base.Theme.App" />

    <!-- Base application theme. -->
    <style name="Base.Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="android:textColor">@color/dark_grey_text</item>
    </style>

    <style name="Base.Theme.App.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryDark">@color/dark_navy_blue</item>
        <item name="android:windowBackground">@color/dark_navy_blue</item>
    </style>

    <style name="ListElementContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">1</item>
    </style>

    <style name="ListElementTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/transparent_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="font">@string/light_font_name</item>
    </style>

    <style name="ListElementButtonStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/transparent_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/description</item>
        <item name="android:padding">6dp</item>
        <item name="android:src">@mipmap/ic_cancel</item>
    </style>

    <style name="ListElementVerticalSeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="UserProfileLabelHintStyle">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
